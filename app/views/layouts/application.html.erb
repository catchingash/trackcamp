<!DOCTYPE html>
<html>
<head>
  <meta charset='UTF-8'>
  <title>Trackcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <%= image_tag 'logo_solid.svg', class: 'logo', alt: 'TrackCamp Logo' %>

    <ul class='header_nav'>
      <%= yield :header_nav %>

      <% if signed_in? %>
        <!-- <li><%= link_to 'Activities', activities_path %></li> -->
        <li><%= @user.email %>
          <ul>
            <li><%= link_to 'Log out', logout_path, method: :delete %></li>
            <li>
              <%= link_to 'Delete account',
                user_path(session[:user_id]),
                method: :delete,
                data: { confirm: '!!!WARNING!!! This will permanently ' +
                  'delete account and all associated data. Are you sure?' }
              %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </header>

  <%= yield %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <!-- Note: This version of Highcharts requires jQuery; there is an alt version avail -->
  <script src="http://code.highcharts.com/highcharts.js"></script>
  <script>
    Highcharts.setOptions({
      global : {
        // this is for all plots, change Date axis to local timezone
        useUTC: false
      }
    });
  </script>

</body>
</html>
